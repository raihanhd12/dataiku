{
    "meta": {
        "label": "Dataset Compute Sentence Similarity",
        "description": "Compute similarity between two text columns (from two datasets) using sentence embeddings.",
        "icon": " icon-github-alt"
    },
    "kind": "PYTHON",
    "selectableFromDataset": "baseline_dataset",
    "inputRoles": [
        {
            "name": "baseline_dataset",
            "label": "Baseline Dataset",
            "description": "Dataset containing the baseline texts.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        },
        {
            "name": "test_dataset",
            "label": "Test Dataset",
            "description": "Dataset containing the test texts.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        },
        {
            "name": "embedding_folder",
            "label": "Embedding Folder",
            "description": "The folder containing the pre-trained word embeddings.",
            "arity": "UNARY",
            "required": true,
            "acceptsManagedFolder": true,
            "acceptsDataset": false
        }
    ],
    "outputRoles": [
        {
            "name": "output_dataset",
            "label": "Output Dataset",
            "description": "A copy of the input datasets with additional columns for similarity metrics and prefixed text columns.",
            "arity": "UNARY",
            "required": true,
            "acceptsDataset": true
        }
    ],
    "params": [
        {
            "name": "baseline_text_column",
            "label": "Baseline Text Column",
            "type": "COLUMN",
            "description": "Select the text column from the baseline dataset.",
            "mandatory": true,
            "columnRole": "baseline_dataset"
        },
        {
            "name": "test_text_column",
            "label": "Test Text Column",
            "type": "COLUMN",
            "description": "Select the text column from the test dataset.",
            "mandatory": true,
            "columnRole": "test_dataset"
        },
        {
            "name": "distance",
            "label": "Distance Metric",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "value": "cosine",
                    "label": "Cosine Distance"
                },
                {
                    "value": "euclidean",
                    "label": "Euclidean Distance"
                },
                {
                    "value": "absolute",
                    "label": "Absolute Distance"
                },
                {
                    "value": "wasserstein",
                    "label": "Earth-Mover (Wasserstein) Distance"
                }
            ],
            "defaultValue": "cosine"
        },
        {
            "name": "aggregation_method",
            "label": "Aggregation Method",
            "type": "SELECT",
            "mandatory": true,
            "selectChoices": [
                {
                    "value": "simple_average",
                    "label": "Simple Average"
                },
                {
                    "value": "SIF",
                    "label": "SIF Embedding"
                }
            ],
            "defaultValue": "simple_average"
        },
        {
            "name": "top_n",
            "label": "Top N Matches",
            "type": "INT",
            "mandatory": true,
            "defaultValue": 10
        },
        {
            "name": "embedding_is_custom",
            "label": "Use Custom Embedding",
            "description": "Tick this box if you are using a custom embedding.",
            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "visibilityCondition": "model.aggregation_method=='SIF'",
            "name": "advanced_settings",
            "label": "Advanced SIF Settings",
            "description": "Enable to set SIF smoothing parameters and principal components.",
            "type": "BOOLEAN",
            "defaultValue": false
        },
        {
            "visibilityCondition": "model.advanced_settings && model.aggregation_method=='SIF'",
            "name": "smoothing_parameter",
            "label": "[SIF] Smoothing Parameter",
            "description": "Used for computing SIF weights.",
            "type": "DOUBLE",
            "defaultValue": 0.001
        },
        {
            "visibilityCondition": "model.advanced_settings && model.aggregation_method=='SIF'",
            "name": "n_principal_components",
            "label": "[SIF] Principal Components",
            "description": "Number of principal components to remove in SIF computation.",
            "type": "INT",
            "defaultValue": 1
        },
        {
            "name": "baseline_prefix",
            "label": "Baseline Prefix",
            "description": "Prefix to add to all columns from the baseline dataset.",
            "type": "STRING",
            "defaultValue": "baselinePrefix_"
        },
        {
            "name": "test_prefix",
            "label": "Test Prefix",
            "description": "Prefix to add to all columns from the test dataset.",
            "type": "STRING",
            "defaultValue": "testPrefix_"
        }
    ]
}